{
  "name": "lift-wallet",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve eslint src",
    "build": "vue-cli-service build eslint src",
    "lint": "vue-cli-service lint",
    "electron:build": "vue-cli-service electron:build",
    "electron:serve": "vue-cli-service electron:serve",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps",
    "binaries:macos":"bash -ec 'source baids/[0-9]*; cardano-wallet-download-binaries macos64'",
    "binaries:windows":"bash -ec 'source baids/[0-9]*; cardano-wallet-download-binaries win64'",
    "binaries:linux":"bash -ec 'source baids/[0-9]*; cardano-wallet-download-binaries linux64'"
  },
  "main": "background.js",
  "dependencies": {
    "axios": "^0.21.0",
    "cardano-crypto.js": "^6.0.0",
    "core-js": "^3.6.5",
    "dayjs": "^1.10.3",
    "vue": "^2.6.11",
    "vue-i18n": "^8.22.4",
    "vuelidate": "^0.7.6",
    "vuetify": "^2.2.11",
    "vuex": "^3.6.2"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "babel-eslint": "^10.1.0",
    "copy-webpack-plugin": "^6.3.2",
    "electron": "^9.0.0",
    "electron-devtools-installer": "^3.1.0",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.2.2",
    "sass": "^1.19.0",
    "sass-loader": "^8.0.0",
    "vue-cli-plugin-electron-builder": "~2.0.0-rc.5",
    "vue-cli-plugin-vuetify": "~2.0.7",
    "vue-template-compiler": "^2.6.11",
    "vuetify-loader": "^1.3.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "semi": 2
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
